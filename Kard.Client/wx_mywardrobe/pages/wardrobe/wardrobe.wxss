/* pages/wardrobe/wardrobe.wxss */

.swiper-view-search-bar{
  width: 100%;
  position:fixed;
  left: 0rpx;
  top: 0rpx;
  background-color: white;
  height: 138rpx;
  opacity:1;
  z-index: 50;
  border-bottom:1rpx solid rgba(0,0,0,0.2);
}


.swiper-view-search-image{
  width: 100%;
  position:fixed;
  left: 30rpx;
  top: 52rpx;
  z-index: 100;
}

.swiper-view-search-image image{

  width: 480rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: rgb(240, 239, 239);
  border:1rpx solid rgba(0,0,0,0.2);
}
 
.swiper {
width: 100%;
height: 650rpx;
}

.swiper image{
width: 100%;
height: 650rpx;
}

.swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
     display:flex;
     justify-content:flex-end;
     width: 86%;
}

.swiper .wx-swiper-dot{
    width:20rpx;
    display: inline-flex;
    height: 4rpx;
    justify-content:flex-end;
}
.swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(165, 165, 165, 0.8);
 
}
.swiper .wx-swiper-dot-active::before{
    background:white;
}

.category-list{
  padding: 40rpx;
  display:flex;
  justify-content:space-around;

}

.category{

height: 170rpx;
width: 120rpx;

}

.category-image{
 height: 120rpx;
 width: 120rpx;
 border-radius: 65rpx;
 border:1rpx solid rgba(0,0,0,0.2);
}

.category-txt{
 height: 50rpx;
 width: 120rpx;
 text-align: center;
}