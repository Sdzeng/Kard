/**index.wxss**/
.container{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: flex-start;
}
.container-left{
  width: 70%;
  padding:10px 0px 10px 10px;
}

.image-view {
  width:100%;
  height: 240px;
  border: 2rpx solid #eee;
  border-radius: 3px;
  position: relative;
}

.image-view:not(:first-child) {
  margin-top: 20rpx;
}

.image {
  border-radius: 3px;
  width: 100%;
  height:100%;
  background-color: #eee;
}

.image-view-label {
  width: 70px;
  height: 30px;
  position: absolute;
  left: 0;
  top: 0;
  margin: auto;
  
  text-align: center;
  background-color: #ee6e73;
   
  color: white;
  border-top-left-radius: 3px;
  border-bottom-right-radius: 30px;
}

.container-right{
  width: 30%;
  padding:10px;
}

.image-box-view {
  width:100%;
  height: 100px;
  border: 2rpx solid #eee;
  border-radius: 3px;
  position: relative;
}

.image-box-view:not(:first-child) {
  margin-top: 20rpx;
}

.image-box {
  border-radius: 3px;
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.image-save-btn{
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
  margin-top: 50px;
}